/*话题列表*/
.topic .header{
    position:relative;
    height:240px;
}
.topic .header .img{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
}
.topic .header text{
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    background:rgba(0,0,0,.6);
    line-height:30px;
    color:#fff;
    font-size:14px;
    padding:10px;
    
}