.box{
  display:block;
  position:relative;
  padding:10px;
  border-bottom:1px solid #efefef;
}
.clear{
  clear:both;
}
.box .img{
  background:#efefef;
  width:100%;
  height:240px;
}
.box .left{
  float:left;
  width:32%;
  height:80px;
  overflow:hidden;
}
.box .left .img{
  height:80px;
}
.box .right{
  float:right;
  width:64%;
  height:80px;
  overflow:hidden;
}
.box .title{
  display:block;
  overflow:hidden;
  margin-bottom:5px;
  font-size:19px;
  color:#333;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.box .desc{
  display:block;
  overflow:hidden;
  font-size:15px;
  color:#666;
  line-height:18px;
  max-height:36px;
}
.box .bottom{
  display:block;
  text-align:right;
  font-size:13px;
  color:#999;
}
.box .bottom text{
  margin-left:7px;
}
.box .right .bottom{
  position:absolute;
  bottom:10px;
  right:10px;
}
.st2 .img{
  margin:5px 0;
}
.st3 .img{
  display:inline-block;
  width:32%;
  height:80px;
  margin:5px 0 5px 1.9%;
}
.st3 .img:first-child{
  margin:5px 0.1% 5px 0;
}
.box .count{
  position:absolute;
  width:20px;
  height:20px;
  border-radius:50%;
  background:#f44336;
  font-size:13px;
  text-align:center;
  line-height:20px;
  color:#fff;
}