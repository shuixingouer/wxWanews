/**index.wxss**/
@charset "utf-8";
@import "../mainList/mainList.wxss";

/**菜单**/
.menu {
  width: 100%;
  background-color: #ebebeb;
  overflow: auto;
  white-space: nowrap;
  display: block;
  margin: 0 auto;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  overflow-y: hidden;
  height:36px;
}
.menu .item {
  height: 36px;
  display: inline-block;
  padding: 0rem 10px;
  text-align: center;
  line-height: 36px;
  font-size: 16px;
  white-space: nowrap;
}

.item.active{
  border-bottom:2px solid #f44336;
  color:#f44336;
}
/**滑动**/
.swiper{
  display: block; 
  width: 100%; 
  overflow: hidden;
  margin: 0;
  border: 0;
}
.scrollView{
  height: 100%;
}

